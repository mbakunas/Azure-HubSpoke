{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion":  "1.0.0.0",
    
    "parameters": {
        "vnetName": {
            "type": "string",
            "defaultValue": "VNet-Hub-01"
        },
        "firewallName": {
            "type": "string",
            "defaultValue": "VNet-Hub-01-Firewall"
        },
        "firewallIpName": {
            "type": "string",
            "defaultValue": "VNet-Hub-01-Firewall-IP"
        },
        "allAzureIpGroupName": {
            "type": "string",
            "defaultValue": "All-Azure-Networks"
        },
        "netRuleCollName": {
            "type": "string",
            "defaultValue": "InfraAllowCollection"
        },
        "netRuleCollPriority": {
            "type": "int",
            "defaultValue": 1000
        },
        "appRuleCollName": {
            "type": "string",
            "defaultValue": "InfraAllowCollection"
        },
        "appRuleCollPriority": {
            "type": "int",
            "defaultValue": 1000
        }

    },
    "variables": {

    },
    "resources": [
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[parameters('firewallIpName')]",
            "apiVersion": "2020-05-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard"
            },
            "properties": {
                "publicIPAddressVersion": "IPv4",
                "publicIPAllocationMethod": "Static"
            }
        },
        {
            "type": "Microsoft.Network/azureFirewalls",
            "name": "[parameters('firewallName')]",
            "apiVersion": "2020-05-01" ,
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses',parameters('firewallIpName'))]"
            ],
            "properties": {
                "sku": {
                    "name": "AZFW_VNet",
                    "tier": "Standard"
                },
                "threatIntelMode": "Alert",
                "ipConfigurations": [
                    {
                        "name": "[concat(parameters('firewallName'),'-ipconfig')]",
                        "properties": {
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses',parameters('firewallIpName'))]"
                            },
                            "subnet": {
                                "id": "[concat(resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName')),'/subnets/AzureFirewallSubnet')]"
                            }
                        }
                    }
                ],
                "networkRuleCollections": [
                    {
                        "name": "[parameters('netRuleCollName')]",
                        "properties": {
                            "priority": "[parameters('netRuleCollPriority')]",
                            "action": {
                                "type": "Allow"
                            },
                            "rules": [
                                {
                                    "name": "AllowAzureCloud",
                                    "protocols": [
                                        "Any"
                                    ],
                                    "sourceAddresses": [],
                                    "destinationAddresses": [
                                        "AzureCloud"
                                    ],
                                    "sourceIpGroups": [
                                        "[parameters('allAzureIpGroupName')]"
                                    ],
                                    "destinationIpGroups": [],
                                    "destinationFqdns": [],
                                    "destinationPorts": [
                                        "*"
                                    ]
                                }
                            ]
                        }
                    }
                ],
                "applicationRuleCollections": [
                    {
                        "name": "[parameters('appRuleCollName')]",
                        "properties": {
                            "priority": "[parameters('appRuleCollPriority')]",
                            "action": {
                                "type": "Allow"
                            },
                            "rules": [
                                {
                                    "name": "AllowWindowsUpdate",
                                    "protocols": [
                                        {
                                            "protocolType": "Http",
                                            "port": 80
                                        },
                                        {
                                            "protocolType": "Https",
                                            "port": 443
                                        }
                                    ],
                                    "fqdnTags": [
                                        "WindowsUpdate"
                                    ],
                                    "targetFqdns": [],
                                    "sourceAddresses": [],
                                    "sourceIpGroups": [
                                        "[parameters('allAzureIpGroupName')]"
                                    ]
                                }
                            ]
                        }
                    }
                ],
                "natRuleCollections": []
            }
        }

    ],
    "outputs": {

    }
}