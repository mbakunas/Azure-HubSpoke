{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion":  "1.0.0.0",
    
    "parameters": {
        "vnetName": {
            "type": "string",
            "defaultValue": "VNet-Hub-01"
        }
    },
    "variables": {
        "bastionSubnetName": "AzureBastionSubnet"
    },
    "resources": [
        {
            "type": "Microsoft.Network/bastionHosts",
            "name": "[concat(parameters('vnetName'),'-Bastion')]",
            "apiVersion": "2020-03-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', concat(parameters('vnetName'),'-Bastion-IP'))]"
            ],
            "properties": {
                "ipConfigurations":[
                    {
                        "name": "IpConf1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIpAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', concat(parameters('vnetName'),'-Bastion-IP'))]"
                            },
                            "subnet": {
                                "id": "[concat(resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName')), '/subnets/', variables('bastionSubnetName'))]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[concat(parameters('vnetName'),'-Bastion-IP')]",
            "apiVersion": "2020-03-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Standard"
            },
            "properties":{
                "publicIPAddressVersion": "IPv4",
                "publicIPAllocationMethod": "Static"
            }
        }
    ],
    "outputs": {}
}