{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "virtualNetwork_name": {
            "type": "String",
            "defaultValue": "VNet-01"
        },
        "virtualNetwork_addressSpace": {
            "type": "string",
            "defaultValue": "10.1.0.0/23"
        },
        "subnet_gateway_addressSpace": {
            "type": "string",
            "defaultValue": "10.1.0.0/26"
        },
        "subnet_firewall_addressSpace": {
            "type": "string",
            "defaultValue": "10.1.0.64/26"
        },
        "subnet_bastion_addressSpace": {
            "type": "string",
            "defaultValue": "10.1.0.128/26"
        },
        "subnet_DC_name": {
            "type": "string",
            "defaultValue": "DCs"
        },
        "subnet_DC_addressSpace": {
            "type": "string",
            "defaultValue": "10.1.0.192/27"
        },
        "subnet_JH_name": {
            "type": "string",
            "defaultValue": "JumpHosts"
        },
        "subnet_JH_addressSpace": {
            "type": "string",
            "defaultValue": "10.1.0.224/27"
        },
        "subnet_1_name": {
            "type": "string",
            "defaultValue": "Subnet1"
        },
        "subnet_1_addressSpace": {
            "type": "string",
            "defaultValue": "10.1.1.0/27"
        },
        "subnet_2_name": {
            "type": "string",
            "defaultValue": "Subnet2"
        },
        "subnet_2_addressSpace": {
            "type": "string",
            "defaultValue": "10.1.1.32/27"
        },
        "subnet_3_name": {
            "type": "string",
            "defaultValue": "Subnet3"
        },
        "subnet_3_addressSpace": {
            "type": "string",
            "defaultValue": "10.1.1.64/27"
        },
        "subnet_4_name": {
            "type": "string",
            "defaultValue": "Subnet4"
        },
        "subnet_4_addressSpace": {
            "type": "string",
            "defaultValue": "10.1.1.96/27"
        }
    },
    "variables": {
        "location": "[resourceGroup().location]",
        "subnet_DC_fullName": "[concat(parameters('subnet_DC_name'),'-',replace(parameters('subnet_DC_addressSpace'),'/','-'))]",
        "subnet_JH_fullName": "[concat(parameters('subnet_JH_name'),'-',replace(parameters('subnet_JH_addressSpace'),'/','-'))]",
        "subnet_1_fullName": "[concat(parameters('subnet_1_name'),'-',replace(parameters('subnet_1_addressSpace'),'/','-'))]",
        "subnet_2_fullName": "[concat(parameters('subnet_2_name'),'-',replace(parameters('subnet_2_addressSpace'),'/','-'))]",
        "subnet_3_fullName": "[concat(parameters('subnet_3_name'),'-',replace(parameters('subnet_3_addressSpace'),'/','-'))]",
        "subnet_4_fullName": "[concat(parameters('subnet_4_name'),'-',replace(parameters('subnet_4_addressSpace'),'/','-'))]",
        "nsg_DC_name": "[concat(variables('subnet_DC_fullName'),'-NSG')]",
        "nsg_JH_name": "[concat(variables('subnet_JH_fullName'),'-NSG')]",
        "nsg_1_name": "[concat(variables('subnet_1_fullName'),'-NSG')]",
        "nsg_2_name": "[concat(variables('subnet_2_fullName'),'-NSG')]",
        "nsg_3_name": "[concat(variables('subnet_3_fullName'),'-NSG')]",
        "nsg_4_name": "[concat(variables('subnet_4_fullName'),'-NSG')]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2020-05-01",
            "name": "[parameters('virtualNetwork_name')]",
            "location": "[variables('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsg_DC_name'))]",
                "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsg_JH_name'))]",
                "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsg_1_name'))]",
                "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsg_2_name'))]",
                "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsg_3_name'))]",
                "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsg_4_name'))]"
            ],
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('virtualNetwork_addressSpace')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "GatewaySubnet",
                        "properties": {
                            "addressPrefix": "[parameters('subnet_gateway_addressSpace')]",
                            "delegations": [],
                            "privateEndpointNetworkPolicies": "Enabled",
                            "privateLinkServiceNetworkPolicies": "Enabled"
                        }
                    },
                    {
                        "name": "AzureFirewallSubnet",
                        "properties": {
                            "addressPrefix": "[parameters('subnet_firewall_addressSpace')]",
                            "delegations": [],
                            "privateEndpointNetworkPolicies": "Enabled",
                            "privateLinkServiceNetworkPolicies": "Enabled"
                        }
                    },
                    {
                        "name": "AzureBastionSubnet",
                        "properties": {
                            "addressPrefix": "[parameters('subnet_bastion_addressSpace')]",
                            "delegations": [],
                            "privateEndpointNetworkPolicies": "Enabled",
                            "privateLinkServiceNetworkPolicies": "Enabled"
                        }
                    },
                    {
                        "name": "[variables('subnet_DC_fullName')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnet_DC_addressSpace')]",
                            "delegations": [],
                            "privateEndpointNetworkPolicies": "Enabled",
                            "privateLinkServiceNetworkPolicies": "Enabled",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsg_DC_name'))]"
                            }
                        }
                    },
                    {
                        "name": "[variables('subnet_JH_fullName')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnet_JH_addressSpace')]",
                            "delegations": [],
                            "privateEndpointNetworkPolicies": "Enabled",
                            "privateLinkServiceNetworkPolicies": "Enabled",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsg_JH_name'))]"
                            }
                        }
                    },
                    {
                        "name": "[variables('subnet_1_fullName')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnet_1_addressSpace')]",
                            "delegations": [],
                            "privateEndpointNetworkPolicies": "Enabled",
                            "privateLinkServiceNetworkPolicies": "Enabled",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsg_1_name'))]"
                            }
                        }
                    },
                    {
                        "name": "[variables('subnet_2_fullName')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnet_2_addressSpace')]",
                            "delegations": [],
                            "privateEndpointNetworkPolicies": "Enabled",
                            "privateLinkServiceNetworkPolicies": "Enabled",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsg_2_name'))]"
                            }
                        }
                    },
                    {
                        "name": "[variables('subnet_3_fullName')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnet_3_addressSpace')]",
                            "delegations": [],
                            "privateEndpointNetworkPolicies": "Enabled",
                            "privateLinkServiceNetworkPolicies": "Enabled",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsg_3_name'))]"
                            }
                        }
                    },
                    {
                        "name": "[variables('subnet_4_fullName')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnet_4_addressSpace')]",
                            "delegations": [],
                            "privateEndpointNetworkPolicies": "Enabled",
                            "privateLinkServiceNetworkPolicies": "Enabled",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsg_4_name'))]"
                            }
                        }
                    }
                ],
                "virtualNetworkPeerings": [],
                "enableDdosProtection": false,
                "enableVmProtection": false
            }
        },
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2020-05-01",
            "name": "[variables('nsg_DC_name')]",
            "location": "[variables('location')]",
            "properties": {
                "securityRules": []
            }
        },
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2020-05-01",
            "name": "[variables('nsg_JH_name')]",
            "location": "[variables('location')]",
            "properties": {
                "securityRules": []
            }
        },
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2020-05-01",
            "name": "[variables('nsg_1_name')]",
            "location": "[variables('location')]",
            "properties": {
                "securityRules": []
            }
        },
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2020-05-01",
            "name": "[variables('nsg_2_name')]",
            "location": "[variables('location')]",
            "properties": {
                "securityRules": []
            }
        },
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2020-05-01",
            "name": "[variables('nsg_3_name')]",
            "location": "[variables('location')]",
            "properties": {
                "securityRules": []
            }
        },
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2020-05-01",
            "name": "[variables('nsg_4_name')]",
            "location": "[variables('location')]",
            "properties": {
                "securityRules": []
            }
        }
    ]
}